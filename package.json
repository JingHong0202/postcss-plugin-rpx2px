{
  "name": "postcss-plugin-viewport",
  "version": "0.0.2",
  "description": "将自定义CSS单位转成自适应单位（vw、rem）",
  "main": "dist/index.js",
  "types": "./types",
  "keywords": [
    "postcss",
    "css",
    "viewport"
  ],
  "scripts": {
    "build": "tsup",
    "build:type": "tsup --dts-only --outDir=types",
    "dev": "tsup --watch",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "format": "set NODE_OPTIONS='--experimental-json-modules' && ts-node --esm ./scripts/format.mts",
    "prepare": "husky install"
  },
  "author": "jinghong",
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "inquirer": "^9.1.5",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1",
    "postcss": "^8.4.22",
    "tsup": "^6.7.0"
  },
  "dependencies": {
    "chalk": "4.1.2"
  },
  "files": [
    "dist",
    "types"
  ],
  "engines": {
    "node": ">=12.0.0"
  }
}
